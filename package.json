{
  "name": "@yiiman/pblog",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "develop:backend": "yarn --cwd backend develop",
    "install:backend": "yarn --cwd backend install",
    "build:backend": "yarn --cwd backend build",

    "develop:frontend": "yarn --cwd frontend develop",
    "install:frontend": "yarn --cwd frontend install",
    "build:frontend": "yarn --cwd frontend build",

    "develop": "cross-env FORCE_COLOR=1 npm-run-all -l -s develop:backend develop:frontend",
    "installer": "cross-env FORCE_COLOR=1 npm-run-all -l -p install:backend install:frontend",
    "build": "cross-env FORCE_COLOR=1 npm-run-all -l -s build:backend build:frontend",

    "gitflow": "cross-env FORCE_COLOR=1 npm-run-all -l -s installer build"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "wait-on": "5.2.1",
    "cross-env": "7.0.3"
  }
}
