{
  "name": "@yiiman/pblog",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "develop:backend": "npm run develop --prefix  backend",
    "install:backend": "npm install --prefix backend",
    "build:backend": "npm run build --prefix backend",
    "testcreate:backend": "npm run forcecreate --prefix backend",

    "develop:frontend": "npm run develop --prefix frontend",
    "install:frontend": "npm run install --prefix frontend",
    "build:frontend": "npm run build --prefix frontend",

    "develop": "cross-env FORCE_COLOR=1 npm-run-all -l -s develop:backend develop:frontend",
    "installer": "cross-env FORCE_COLOR=1 npm-run-all -l -p install:backend install:frontend",
    "build": "cross-env FORCE_COLOR=1 npm-run-all -l -s build:backend build:frontend",
    "create": "cross-env FORCE_COLOR=1 npm-run-all -l -s testcreate:backend",

    "gitflow": "cross-env FORCE_COLOR=1 npm-run-all -l -s installer build"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "wait-on": "5.2.1",
    "cross-env": "7.0.3"
  }
}
